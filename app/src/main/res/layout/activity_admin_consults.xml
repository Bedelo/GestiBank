<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00079C4A"
    tools:context=".AdminConsults">

    <ListView
        android:id="@+id/listViewClient"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00079C4A"
        app:layout_constraintBottom_toTopOf="@+id/affectation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

    <Button
        android:id="@+id/affectation"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/alegreya_sans_sc_medium"
        android:gravity="center"
        android:onClick="myService"
        android:text="afficher client"
        app:backgroundTint="#065C32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#76FF03" />

</androidx.constraintlayout.widget.ConstraintLayout>